<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgHallName"
        android:layout_gravity="center"
        android:src="@drawable/towhall"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"

        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bàn tối đa :"
        android:textColor="#FF3D00"
        android:textSize="15dp"
        android:textAlignment="center"

        android:textStyle="bold"
        android:paddingTop="10dp"
        android:layout_below="@+id/imgHallName"

        android:paddingRight="10dp"
        android:id="@+id/txtban"/>
    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txtban"
        android:layout_below="@+id/imgHallName"
        android:id="@+id/edtbantoida"
        android:textColor="#76FF03"
        android:paddingTop="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF3D00"
        android:textSize="15dp"
        android:textAlignment="center"
      android:layout_below="@+id/txtban"
        android:paddingRight="10dp"
        android:textStyle="bold"
        android:paddingTop="10dp"

        android:id="@+id/txtgiatoithieu"
android:text="Giá tối thiểu"

        />
    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txtgiatoithieu"
        android:layout_below="@+id/txtban"
        android:id="@+id/edtgiatoithieu"
        android:textColor="#76FF03"
        android:paddingTop="5dp"/>
</RelativeLayout>
