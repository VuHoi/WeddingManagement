<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar_ThanhToan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"></android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/groom"
            android:paddingLeft="-40dp"
            android:paddingRight="-40dp"
            android:id="@+id/imageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:id="@+id/txtChuRe_LapHoaDon"
            android:layout_toLeftOf="@+id/imgheart"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/heart"
            android:id="@+id/imgheart"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:id="@+id/txtCoDau_LapHoaDon"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/imgheart"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imgbride"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="-40dp"
            android:paddingRight="-40dp"
            android:src="@drawable/bride"
            android:layout_alignParentRight="true"
            android:id="@+id/imgbride"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sảnh:"
                android:layout_gravity="center|start"
                android:id="@+id/txtSanh_LapHoaDon"
                android:layout_marginTop="10dp"
                android:textSize="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đơn giá bàn:"
                android:layout_gravity="center|start"
                android:layout_marginTop="10dp"
                android:id="@+id/txtDonGiaBan"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng tiền bàn:"
                android:layout_gravity="center|start"
                android:layout_marginTop="10dp"
                android:id="@+id/txtTongTienBan"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng bàn:"
                android:layout_gravity="center|start"
                android:layout_marginTop="10dp"
                android:textSize="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:hint="Nhập số bàn"
                android:inputType="number"
                android:id="@+id/txtSLBan"
                android:layout_marginTop="0dp"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày thanh toán:"
                android:layout_gravity="center|start"
                android:id="@+id/txt_NgayThanhToan"
                android:layout_marginTop="3dp"
                android:textSize="20dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>